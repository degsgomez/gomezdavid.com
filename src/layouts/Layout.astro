---
import '../styles/global.css';
import config from '../content/config.json';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = `${config.name} | ${config.title}`,
	description = config.tagline
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL('/photo.jpg', Astro.site);

// JSON-LD Structured Data
const jsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Person',
	name: config.name,
	jobTitle: config.title,
	description: config.tagline,
	email: config.email,
	telephone: config.phone,
	address: {
		'@type': 'PostalAddress',
		addressLocality: config.location
	},
	image: new URL(config.image, Astro.site).toString(),
	url: Astro.site?.toString(),
	sameAs: [
		config.social.linkedin,
		config.social.github,
		config.social.twitter
	].filter(Boolean)
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="author" content={config.name} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:site_name" content={config.name} />
		<meta property="og:locale" content="en_US" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={ogImage} />

		<!-- Additional SEO -->
		<meta name="keywords" content="David Gomez, Digital Content Strategist, SEO Specialist, Bilingual Marketing, Content Marketing, U.S. Hispanic Markets, LATAM Marketing, Multi-channel Marketing, Hartford CT, Marketing Professional" />
		<meta name="robots" content="index, follow" />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
	</head>
	<body class="bg-white text-gray-900 antialiased">
		<slot />
	</body>
</html>

<style is:global>
	@view-transition {
		navigation: auto;
	}
</style>
