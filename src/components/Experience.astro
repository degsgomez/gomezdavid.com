---
import experience from '../content/experience.json';
---

<section id="experience" class="min-h-screen py-16 sm:py-24 px-4 sm:px-6 bg-white w-full">
  <div class="max-w-6xl mx-auto w-full">
    <div class="text-center mb-12 sm:mb-20">
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">Experience</h2>
      <div class="w-24 h-1.5 bg-coral-500 mx-auto rounded-full" style="background-color: #f97316;"></div>
    </div>

    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-gray-200"></div>

      <div class="space-y-16">
        {experience.map((job, index) => (
          <div
            class={`relative grid md:grid-cols-2 gap-8 ${
              index % 2 === 0 ? '' : 'md:flex-row-reverse'
            }`}
          >
            {/* Timeline dot */}
            <div class="absolute left-8 md:left-1/2 -translate-x-1/2 w-5 h-5 rounded-full ring-4 ring-white z-10" style="background-color: #1e3a8a;"></div>

            {/* Content */}
            <div class={`${index % 2 === 0 ? 'md:col-start-2' : 'md:col-start-1'} ml-20 md:ml-0`}>
              <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 group">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">
                      {job.position}
                    </h3>
                    <p class="font-semibold" style="color: #1e3a8a;">{job.company}</p>
                  </div>
                  <span class="text-sm text-gray-500 whitespace-nowrap ml-4 font-medium">
                    {job.startDate} - {job.endDate}
                  </span>
                </div>

                <p class="text-sm text-gray-500 mb-4 font-medium">{job.location}</p>

                <p class="text-gray-700 mb-6 leading-relaxed">{job.description}</p>

                {job.highlights && job.highlights.length > 0 && (
                  <ul class="space-y-3">
                    {job.highlights.map((highlight) => (
                      <li class="flex items-start gap-3 text-gray-600">
                        <svg class="w-5 h-5 flex-shrink-0 mt-0.5" style="color: #f97316;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>{highlight}</span>
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
