---
import education from '../content/education.json';
---

<section id="education" class="min-h-screen py-24 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-zinc-100 mb-4">Education</h2>
      <div class="w-20 h-1 bg-emerald-500 mx-auto"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {education.map((edu) => (
        <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-8 hover:border-emerald-500/50 transition-all hover:shadow-lg hover:shadow-emerald-500/10 group">
          {/* Degree Icon */}
          <div class="mb-6">
            <div class="w-16 h-16 bg-zinc-800 rounded-lg flex items-center justify-center group-hover:bg-emerald-500/10 transition-colors">
              <svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
              </svg>
            </div>
          </div>

          {/* Degree Info */}
          <div class="space-y-3">
            <h3 class="text-xl font-bold text-zinc-100 group-hover:text-emerald-400 transition-colors">
              {edu.degree}
            </h3>
            <p class="text-emerald-400 font-medium">{edu.school}</p>
            <p class="text-sm text-zinc-500">{edu.location}</p>

            {edu.description && (
              <p class="text-zinc-400 text-sm mt-4">{edu.description}</p>
            )}

            {edu.highlights && edu.highlights.length > 0 && (
              <ul class="space-y-2 mt-4">
                {edu.highlights.map((highlight) => (
                  <li class="flex items-start gap-2 text-sm text-zinc-400">
                    <svg class="w-5 h-5 text-emerald-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>{highlight}</span>
                  </li>
                ))}
              </ul>
            )}

            <div class="pt-4 border-t border-zinc-800 mt-4">
              <span class="text-xs text-zinc-500">{edu.graduationDate}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
