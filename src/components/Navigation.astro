<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md shadow-sm">
  <div class="max-w-6xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="#hero" class="text-lg font-bold text-gray-900 hover:text-blue-900 transition-colors">
        David Gomez
      </a>

      <div class="hidden md:flex items-center gap-8">
        <a href="#about" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">About</a>
        <a href="#services" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Services</a>
        <a href="#experience" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Experience</a>
        <a href="#skills" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Skills</a>
        <a href="#contact" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Contact</a>
      </div>

      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-600 hover:text-gray-900 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-3">
      <a href="#about" class="block text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">About</a>
      <a href="#services" class="block text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Services</a>
      <a href="#experience" class="block text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Experience</a>
      <a href="#skills" class="block text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Skills</a>
      <a href="#contact" class="block text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">Contact</a>
    </div>
  </div>
</nav>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  const mobileLinks = menu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>
