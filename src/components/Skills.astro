---
import skills from '../content/skills.json';
import certifications from '../content/certifications.json';
---

<section id="skills" class="py-24 px-6 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-20">
      <h2 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">Skills & Expertise</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
        A comprehensive toolkit for creating impactful marketing and content strategies
      </p>
    </div>

    <!-- Skills Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
      <!-- Creative Skills -->
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
          <span class="text-3xl">ðŸŽ¨</span>
          Creative & Content
        </h3>
        <ul class="space-y-3">
          {skills.creative.map((skill) => (
            <li class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 flex-shrink-0" style="color: #1e3a8a;" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              {skill}
            </li>
          ))}
        </ul>
      </div>

      <!-- Marketing Skills -->
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
          <span class="text-3xl">ðŸ“ˆ</span>
          Marketing & Strategy
        </h3>
        <ul class="space-y-3">
          {skills.marketing.map((skill) => (
            <li class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 flex-shrink-0" style="color: #1e3a8a;" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              {skill}
            </li>
          ))}
        </ul>
      </div>

      <!-- Technical Skills -->
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
          <span class="text-3xl">ðŸ’»</span>
          Technical & Tools
        </h3>
        <ul class="space-y-3">
          {skills.technical.map((skill) => (
            <li class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 flex-shrink-0" style="color: #1e3a8a;" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              {skill}
            </li>
          ))}
        </ul>
      </div>

      <!-- Languages -->
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
          <span class="text-3xl">ðŸŒŽ</span>
          Languages
        </h3>
        <ul class="space-y-3">
          {skills.languages.map((lang) => (
            <li class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 flex-shrink-0" style="color: #1e3a8a;" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              {lang}
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Certifications -->
    <div>
      <h3 class="text-3xl font-bold text-gray-900 mb-12 text-center">Certifications</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {certifications.map((cert) => (
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="text-center">
              <h4 class="text-xl font-bold text-gray-900 mb-3">{cert.name}</h4>
              <p class="font-semibold mb-2" style="color: #1e3a8a;">{cert.issuer}</p>
              <p class="text-gray-500 text-sm mb-4 font-medium">{cert.date}</p>
              <p class="text-gray-600 leading-relaxed">{cert.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
