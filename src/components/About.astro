---
// Import the markdown file directly - Astro handles this at build time
const aboutMarkdown = await import('../content/about.md?raw');
const aboutContent = aboutMarkdown.default;

// Simple markdown to HTML conversion for basic formatting
const htmlContent = aboutContent
  .replace(/^# (.+)$/gm, '<h2 class="text-3xl font-bold text-gray-900 mb-4">$1</h2>')
  .replace(/^## (.+)$/gm, '<h3 class="text-2xl font-semibold text-gray-800 mb-3">$1</h3>')
  .replace(/\*\*(.+?)\*\*/g, '<strong style="color: #1e3a8a;">$1</strong>')
  .replace(/\[(.+?)\]/g, '<span style="color: #1e3a8a;">$1</span>')
  .replace(/<!--.*?-->/gs, '') // Remove HTML comments
  .split('\n\n')
  .filter(p => p.trim())
  .map(p => `<p class="text-gray-700 leading-relaxed text-lg">${p}</p>`)
  .join('');
---

<section id="about" class="min-h-screen py-16 sm:py-24 px-4 sm:px-6 bg-white w-full">
  <div class="max-w-6xl mx-auto w-full">
    <div class="text-center mb-12 sm:mb-20">
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">About Me</h2>
      <div class="w-24 h-1.5 mx-auto rounded-full" style="background-color: #1e3a8a;"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-8 sm:gap-12 md:gap-16 items-center">
      <!-- Photo placeholder -->
      <div class="order-2 md:order-1">
        <div class="relative group">
          <div class="absolute inset-0 rounded-3xl blur-2xl opacity-30 group-hover:opacity-40 transition-opacity" style="background: linear-gradient(to right, #1e3a8a, #f97316);"></div>
          <div class="relative bg-white rounded-3xl p-3 shadow-2xl">
            <!-- David's photo -->
            <div class="aspect-square rounded-2xl bg-gray-100 flex items-center justify-center overflow-hidden">
              <img
                src="/images/david-about.jpg"
                alt="David Gomez"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Bio content -->
      <div class="order-1 md:order-2 space-y-6">
        <div set:html={htmlContent} class="prose prose-lg max-w-none space-y-6" />
      </div>
    </div>
  </div>
</section>
