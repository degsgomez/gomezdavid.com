---
import portfolio from '../content/portfolio.json';
---

<section id="portfolio" class="min-h-screen py-16 sm:py-24 px-4 sm:px-6 bg-gray-50 w-full">
  <div class="max-w-6xl mx-auto w-full">
    <div class="text-center mb-12 sm:mb-20">
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">Portfolio</h2>
      <div class="w-24 h-1.5 bg-coral-500 mx-auto rounded-full" style="background-color: #f97316;"></div>
      <p class="mt-6 text-lg text-gray-600 max-w-3xl mx-auto">
        Featured projects showcasing digital marketing excellence across diverse industries
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {portfolio.map((project) => (
        <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="relative h-64 overflow-hidden">
            <img
              src={project.image}
              alt={project.name}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute top-4 right-4">
              <span class="px-3 py-1 text-xs font-semibold rounded-full" style="background-color: #1e3a8a; color: white;">
                {project.type}
              </span>
            </div>
          </div>

          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-3">
              {project.name}
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              {project.description}
            </p>

            {project.link && (
              <a
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 font-semibold hover:gap-3 transition-all"
                style="color: #f97316;"
              >
                View Project
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
