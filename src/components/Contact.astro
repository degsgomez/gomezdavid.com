---
import config from '../content/config.json';
---

<section id="contact" class="min-h-screen py-16 sm:py-24 px-4 sm:px-6 flex items-center bg-white w-full">
  <div class="max-w-4xl mx-auto w-full">
    <div class="text-center mb-12 sm:mb-20">
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">Get In Touch</h2>
      <div class="w-24 h-1.5 mx-auto rounded-full" style="background-color: #f97316;"></div>
      <p class="text-gray-600 mt-6 max-w-2xl mx-auto text-xl leading-relaxed">
        Have a question or want to work together? Feel free to reach out!
      </p>
    </div>

    <div class="bg-white rounded-3xl p-8 md:p-12 shadow-2xl">
      <div class="grid md:grid-cols-2 gap-8">
        {/* Contact info */}
        <div class="space-y-8">
          <div>
            <h3 class="text-3xl font-bold text-gray-900 mb-4">Let's Connect</h3>
            <p class="text-gray-600 leading-relaxed text-lg">
              I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.
            </p>
          </div>

          {/* Email */}
          <div class="flex items-start gap-4 group">
            <div class="p-4 bg-gray-50 rounded-xl group-hover:shadow-md transition-all">
              <svg class="w-6 h-6" style="color: #1e3a8a;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-500 mb-1 font-medium">Email</p>
              <a
                href={`mailto:${config.email}`}
                class="text-gray-900 hover:text-blue-900 transition-colors font-medium text-lg"
              >
                {config.email}
              </a>
            </div>
          </div>

          {/* Phone */}
          {config.phone && (
            <div class="flex items-start gap-4 group">
              <div class="p-4 bg-gray-50 rounded-xl group-hover:shadow-md transition-all">
                <svg class="w-6 h-6" style="color: #1e3a8a;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 mb-1 font-medium">Phone</p>
                <a
                  href={`tel:${config.phone}`}
                  class="text-gray-900 hover:text-blue-900 transition-colors font-medium text-lg"
                >
                  {config.phone}
                </a>
              </div>
            </div>
          )}

          {/* Location */}
          {config.location && (
            <div class="flex items-start gap-4 group">
              <div class="p-4 bg-gray-50 rounded-xl group-hover:shadow-md transition-all">
                <svg class="w-6 h-6" style="color: #1e3a8a;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 mb-1 font-medium">Location</p>
                <p class="text-gray-900 font-medium text-lg">{config.location}</p>
              </div>
            </div>
          )}

          {/* Social links */}
          <div class="pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-500 mb-4 font-medium">Find me on</p>
            <div class="flex gap-4">
              {config.social.github && (
                <a
                  href={config.social.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-4 bg-gray-50 hover:bg-gray-100 rounded-xl transition-all hover:scale-110 group"
                  aria-label="GitHub"
                >
                  <svg class="w-6 h-6 text-gray-600 group-hover:text-blue-900 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
                  </svg>
                </a>
              )}
              {config.social.linkedin && (
                <a
                  href={config.social.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-4 bg-gray-50 hover:bg-gray-100 rounded-xl transition-all hover:scale-110 group"
                  aria-label="LinkedIn"
                >
                  <svg class="w-6 h-6 text-gray-600 group-hover:text-blue-900 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
              {config.social.twitter && (
                <a
                  href={config.social.twitter}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-4 bg-gray-50 hover:bg-gray-100 rounded-xl transition-all hover:scale-110 group"
                  aria-label="Twitter"
                >
                  <svg class="w-6 h-6 text-gray-600 group-hover:text-blue-900 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>

        {/* Call to action */}
        <div class="flex items-center justify-center">
          <div class="text-center space-y-8">
            <div class="relative">
              <div class="absolute inset-0 rounded-full blur-3xl opacity-20" style="background: linear-gradient(to right, #1e3a8a, #f97316);"></div>
              <div class="relative p-16 bg-gray-50 rounded-full">
                <svg class="w-24 h-24" style="color: #1e3a8a;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
            </div>
            <div>
              <h4 class="text-2xl font-bold text-gray-900 mb-3">Ready to collaborate?</h4>
              <p class="text-gray-600 mb-8 leading-relaxed">
                Drop me a message and let's create something amazing together
              </p>
              <a
                href={`mailto:${config.email}`}
                class="inline-flex items-center gap-2 px-8 py-4 text-white font-semibold rounded-xl transition-all hover:scale-105 shadow-lg hover:shadow-xl" style="background-color: #1e3a8a;"
              >
                Send Email
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* Footer */}
    <div class="text-center mt-12 pt-8 border-t border-gray-200">
      <p class="text-gray-500">
        Â© {new Date().getFullYear()} {config.name}.
      </p>
    </div>
  </div>
</section>
